<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vancu.findmytrackalpha1">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Coarse location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Or fine location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LoginRegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SearchStops" />
        <activity
            android:name=".LoggedInMainMenuActivity"
            android:label="@string/title_activity_logged_in_main_menu" />
        <activity android:name=".NewStopSchedule" />
        <activity
            android:name=".LoggedInScheduleActivity"
            android:label="@string/title_activity_logged_in_schedule"
            android:theme="@style/AppTheme" />
        <activity android:name=".NewCustomScheduleActivity" />
        <activity android:name=".LoggedInViewMapActivity" />
        <activity
            android:name=".LoggedInSettingsActivity"
            android:label="@string/title_activity_logged_in_settings" />
        <activity android:name=".LoggedInViewSchedule" />
        <activity android:name=".ViewSearchResults"/>

    </application>

</manifest>