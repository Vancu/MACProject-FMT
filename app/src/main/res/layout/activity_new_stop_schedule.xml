<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewStopSchedule">

    <EditText
        android:id="@+id/etNameSchedule"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tStopSchedule"
        tools:text="Name for Schedule" />

    <EditText
        android:id="@+id/etBusStopAddress"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNameSchedule"
        tools:text="Bus Stop Address" />

    <Button
        android:id="@+id/button4"
        android:layout_width="147dp"
        android:layout_height="67dp"
        android:layout_marginBottom="260dp"
        android:layout_marginEnd="118dp"
        android:layout_marginLeft="119dp"
        android:layout_marginRight="118dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="21dp"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ranges" />

    <TextView
        android:id="@+id/tStopSchedule"
        android:layout_width="155dp"
        android:layout_height="25dp"
        android:layout_marginEnd="197dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="197dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="New Stop Schedule"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/Ranges"
        android:layout_width="97dp"
        android:layout_height="22dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginTop="12dp"
        android:entries="@array/MileRanges"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBusStopAddress" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="14dp"
        android:text="Range (miles)"
        app:layout_constraintEnd_toStartOf="@+id/ranges"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBusStopAddress" />

</android.support.constraint.ConstraintLayout>